.header-menu-container.d-flex.align-items-center.justify-content-end
	nav.header-menu-nav.d-xl-block.d-none
		ul.header-menu.list-unstyled
			- var n=0;
			each itemTitle in [ 'О компании', 'Услуги', 'Продукция', 'Разработки и инновации', 'Сертификаты и лицензии', 'Контакты' ]
				- n++;
				li(class=(pageNum == n ? "active" : undefined))
					a(href="/")= itemTitle
	
	.header-menu-toggle-container.d-flex.d-xl-none.align-items-center
		span.header-menu-toggle-label Меню
		button.header-menu-toggle